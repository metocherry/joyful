root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120
spaces_around_operators = true
spaces_around_brackets = true

end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,package.json,package-lock.json}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
