{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots" : [
      "node_modules/@types",
      "./typings"
    ]
  }
}
